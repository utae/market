<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_1dp_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:text="인기상품에\n추가"
                android:textColor="@android:color/black"
                android:id="@+id/popular_btn"/>

            <View
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:background="@color/gray"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:text="한정특가에\n추가"
                android:textColor="@android:color/black"
                android:id="@+id/bargain_btn"/>


        </LinearLayout>

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:text="세일상품에\n추가"
                android:textColor="@android:color/black"
                android:id="@+id/sale_btn"/>

            <View
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:background="@color/gray"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:text="행사상품에\n추가"
                android:textColor="@android:color/black"
                android:id="@+id/event_btn"/>

        </LinearLayout>

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:text="이미지\n수정"
                android:textColor="@android:color/black"
                android:id="@+id/mod_img_btn"/>

            <View
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:background="@color/gray"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:text="할인가\n수정"
                android:textColor="@android:color/black"
                android:id="@+id/discount_btn"/>

        </LinearLayout>

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:text="이미지\n삭제"
                android:textColor="@android:color/black"
                android:id="@+id/del_img_btn"/>

            <View
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:background="@color/gray"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:text="닫기"
                android:textColor="@android:color/black"
                android:id="@+id/close_btn"/>

        </LinearLayout>

    </LinearLayout>

</layout>